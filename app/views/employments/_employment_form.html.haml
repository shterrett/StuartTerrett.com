= form_for employment do |f|
  %div.row
    %div.large-3.columns
      %label
        %strong Company: 
    %div.large-6.columns
      = f.text_field :company, { placeholder: "Company" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Position: 
    %div.large-6.columns
      = f.text_field :position, { placeholder: "Position" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Description:
    %div.large-6.columns
      =f.text_area :description, { placeholder: "Describe job", class: "long" }
      %aside.instruction
        This field accepts Markdown formatted text
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Start Date:
    %div.large-6.columns
      =f.date_field :start_date, { placeholder: "Start" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong End Date:
    %div.large-6.columns
      =f.date_field :end_date, { placeholder: "End" }
      %aside.instruction
        Set the year less than 1000 for "End Date" to render as "Current"
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Website:
    %div.large-6.columns
      =f.text_field :url, { placeholder: "http://cool-job.com" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Technologies:
    %div.large-6.columns
      = f.text_field :technology_tokens, data: { load: @employment.technologies }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Projects:
    %div.large-6.columns
      = f.text_field :project_tokens, data: { load: @employment.projects }
    %div.large-3.columns
  %div.row
    %div.large-6.large-centered.small-6.small-centered.columns
      = f.submit
