= form_for technology do |f|
  %div.row
    %div.large-3.columns
      %label
        %strong Name: 
    %div.large-6.columns
      = f.text_field :name, { placeholder: "Name" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Abbreviation: 
    %div.large-6.columns
      = f.text_field :abbreviation, { placeholder: "Abbreviation" }
    %div.large-3.columns
  %div.row
    %div.large-3.columns
      %label
        %strong Description:
    %div.large-6.columns
      =f.text_area :description, { placeholder: "Describe experience" }
    %div.large-3.columns
  %div.row
    %div.large-6.large-centered.small-6.small-centered.columns
      = f.submit
