= content_for(:title) { "Technologies List" }

%section.technologies.index
  %header
    %h1 All Technologies

  %section
    - @technologies.each_slice(6) do |techs|
      %div.row
        - techs.each do |tech|
          %div.large-2.small-4.columns
            = link_to tech.name, technology_path(tech)
        = fill_row(techs, 6, "large-2.small-4.columns")